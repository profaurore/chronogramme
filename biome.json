{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"css": {
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		}
	},
	"files": {
		"ignore": ["coverage/", "dist/"]
	},
	"json": {
		"parser": {
			"allowTrailingCommas": true
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"complexity": {
				"noExcessiveCognitiveComplexity": {
					"level": "error",
					"options": {
						"maxAllowedComplexity": 16
					}
				}
			},
			"nursery": {
				"noCommonJs": "error",
				"noDescendingSpecificity": "error",
				"noDuplicateCustomProperties": "error",
				"noDuplicateElseIf": "error",
				"noDynamicNamespaceImportAccess": "error",
				"noExportedImports": "error",
				"noIrregularWhitespace": "error",
				"noMissingVarFunction": "error",
				"noNestedTernary": "error",
				"noOctalEscape": "error",
				"noProcessEnv": "error",
				"noSecrets": "error",
				"noStaticElementInteractions": "error",
				"noSubstr": "error",
				"noTemplateCurlyInString": "error",
				"noUnknownPseudoClass": "error",
				"noUnknownPseudoElement": "error",
				"noUselessEscapeInRegex": "error",
				"useAdjacentOverloadSignatures": "error",
				"useAriaPropsSupportedByRole": "error",
				"useComponentExportOnlyModules": "error",
				"useConsistentCurlyBraces": "error",
				"useSortedClasses": "error",
				"useStrictMode": "error",
				"useTrimStartEnd": "error",
				"useValidAutocomplete": "error"
			},
			"style": {
				"noImplicitBoolean": "off",
				"useNamingConvention": {
					"level": "error",
					"options": {
						"strictCase": false
					}
				}
			},
			"suspicious": {
				"noConsoleLog": "off",
				"noImplicitAnyLet": "error",
				"noReactSpecificProps": "off"
			}
		}
	},
	"overrides": [
		{
			"include": ["lib/main.ts"],
			"linter": {
				"rules": {
					"performance": {
						"noBarrelFile": "off"
					}
				}
			}
		},
		{
			"include": ["*.config.*"],
			"linter": {
				"rules": {
					"correctness": {
						"noNodejsModules": "off"
					},
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"include": [".vscode/settings.json", "**/*.jsonc", "tsconfig*.json"],
			"json": {
				"parser": {
					"allowComments": true
				}
			}
		}
	],
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
