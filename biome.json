{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"files": {
		"ignore": ["coverage/", "dist/"]
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"rules": {
			"all": true,
			"complexity": {
				"noExcessiveCognitiveComplexity": {
					"level": "error",
					"options": {
						"maxAllowedComplexity": 16
					}
				}
			},
			"style": {
				"noImplicitBoolean": "off",
				"useNamingConvention": {
					"level": "error",
					"options": {
						"strictCase": false
					}
				}
			}
		}
	},
	"json": {
		"parser": {
			"allowTrailingCommas": true
		}
	},
	"overrides": [
		{
			"include": ["lib/main.ts"],
			"linter": {
				"rules": {
					"performance": {
						"noBarrelFile": "off"
					}
				}
			}
		},
		{
			"include": ["*.config.*"],
			"linter": {
				"rules": {
					"correctness": {
						"noNodejsModules": "off"
					},
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"include": [".vscode/settings.json", "**/*.jsonc", "tsconfig*.json"],
			"json": {
				"parser": {
					"allowComments": true
				}
			}
		}
	]
}
