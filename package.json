{
	"name": "@chronogramme/monorepo",
	"version": "0.2.0",
	"private": true,
	"description": "A virtualized timeline",
	"keywords": [
		"timeline"
	],
	"homepage": "https://github.com/profaurore/chronogramme",
	"bugs": {
		"url": "https://github.com/profaurore/chronogramme/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/profaurore/chronogramme"
	},
	"license": "SEE LICENSE IN LICENSE.md",
	"type": "module",
	"engines": {
		"node": ">=24",
		"pnpm": ">=8"
	},
	"scripts": {
		"do-publish": "lefthook run prepublish && pnpm -r publish --access public",
		"dry-publish": "lefthook run prepublish && pnpm -r publish --access public --dry-run",
		"fix": "pnpm fix:code && pnpm fix:css",
		"fix:css": "stylelint --fix \"**/*\"",
		"fix:code": "biome check --write .",
		"lint": "pnpm lint:code && pnpm lint:css && pnpm lint:knip",
		"lint:css": "stylelint \"**/*\"",
		"lint:code": "biome check .",
		"lint:knip": "knip && knip --production --config knip.prod.jsonc",
		"pre-commit": "lefthook run checks",
		"pre-commit-fix": "lefthook run pre-commit",
		"pre-push": "lefthook run pre-push",
		"prepare": "lefthook install",
		"test": "vitest"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^4.0.13",
		"knip": "^5.73.4",
		"lefthook": "^2.0.4",
		"postcss": "^8.5.6",
		"postcss-html": "^1.8.0",
		"postcss-jsx": "^0.36.4",
		"postcss-markdown": "^1.3.0",
		"postcss-styled-syntax": "^0.7.1",
		"postcss-syntax": "^0.36.2",
		"stylelint": "^16.26.0",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-standard": "^39.0.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.13"
	}
}
