{
	"name": "@chronogramme/chronogramme-rct",
	"version": "0.1.0",
	"description": "A virtualized timeline for React",
	"keywords": [
		"timeline"
	],
	"homepage": "https://github.com/profaurore/chronogramme",
	"bugs": {
		"url": "https://github.com/profaurore/chronogramme/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/profaurore/chronogramme"
	},
	"license": "SEE LICENSE IN LICENSE.md",
	"type": "module",
	"engines": {
		"node": ">=24.12",
		"pnpm": ">=8"
	},
	"main": "./dist/chronogramme-rct.js",
	"module": "./dist/chronogramme-rct.js",
	"exports": {
		"./GroupRow": {
			"import": "./dist/groups/GroupRow.js",
			"types": "./dist/types/groups/GroupRow.d.ts"
		},
		"./CustomHeader": {
			"import": "./dist/headers/CustomHeader.js",
			"types": "./dist/types/headers/GroupRow.d.ts"
		},
		"./DateHeader": {
			"import": "./dist/headers/DateHeader.js",
			"types": "./dist/types/headers/DateHeader.d.ts"
		},
		"./SidebarHeader": {
			"import": "./dist/headers/SidebarHeader.js",
			"types": "./dist/types/headers/SidebarHeader.d.ts"
		},
		"./TimelineHeaders": {
			"import": "./dist/headers/TimelineHeaders.js",
			"types": "./dist/types/headers/TimelineHeaders.d.ts"
		},
		"./HelpersContext": {
			"import": "./dist/helpers/HelpersContext.js",
			"types": "./dist/types/helpers/HelpersContext.d.ts"
		},
		"./useHelpersContext": {
			"import": "./dist/helpers/useHelpersContext.js",
			"types": "./dist/types/helpers/useHelpersContext.d.ts"
		},
		"./TimelineState": {
			"import": "./dist/helpers/TimelineContext.js",
			"types": "./dist/types/helpers/TimelineContext.d.ts"
		},
		"./useTimelineState": {
			"import": "./dist/helpers/useTimelineContext.js",
			"types": "./dist/types/helpers/useTimelineContext.d.ts"
		},
		"./RowItems": {
			"import": "./dist/items/RowItems.js",
			"types": "./dist/types/items/RowItems.d.ts"
		},
		"./TimelineMarkers": {
			"import": "./dist/markers/TimelineMarkers.js",
			"types": "./dist/types/markers/TimelineMarkers.d.ts"
		},
		"./Timeline": {
			"import": "./dist/Timeline.js",
			"types": "./dist/types/Timeline.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "vite build && tsc --project ./tsconfig.json",
		"dev": "concurrently \"pnpm --filter @chronogramme/chronogramme dev\" \"vite build --watch\" \"tsc --project tsconfig.json --watch\"",
		"prepublishOnly": "pnpm build"
	},
	"dependencies": {
		"@chronogramme/chronogramme": "workspace:^"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.6",
		"@vitejs/plugin-react-swc": "4.0.1",
		"concurrently": "^9.2.1",
		"typescript": "^5.9.3",
		"vite": "^7.2.4",
		"vitest": "^4.0.13"
	},
	"peerDependencies": {
		"react": "^19",
		"react-dom": "^19"
	}
}
